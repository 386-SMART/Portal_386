<script src="/js/vistas-tickets-tv.js?v=<%= Date.now() %>"></script>

<script>
    // Reloj simple
    setInterval(() => {
        const now = new Date();
        document.getElementById('live-clock').innerText = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
    }, 1000);
</script>

</body>
</html>