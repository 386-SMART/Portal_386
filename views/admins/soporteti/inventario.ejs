<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario General - Soporte TI</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Chart.js (solo JS) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js" defer></script>

    <!-- Estilos propios -->
    <link rel="stylesheet" href="/css/inventario.css">
</head>
<body>
    <div class="main-wrapper">
        <!-- Barra superior -->
        <header class="topbar shadow-sm">
            <div class="topbar-left">
                <div class="topbar-icon">
                    <i class="bi bi-hdd-stack-fill"></i>
                </div>
                <div>
                    <h1 class="topbar-title">Inventario General</h1>
                    <p class="topbar-subtitle">Visión consolidada de todos los equipos en servicio</p>
                </div>
            </div>
            <div class="topbar-right">
                <span class="badge bg-primary-subtle text-primary d-flex align-items-center gap-2">
                    <i class="bi bi-diagram-3"></i>
                    Inventario Soporte TI
                </span>
            </div>
        </header>

        <main class="main-content">
            <!-- Tarjetas resumen -->
            <section class="row g-3 mb-4" id="summaryCards">
                <div class="col-md-4">
                    <div class="card card-summary border-0 h-100">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p class="card-summary-label">Empresas con equipos</p>
                                <h2 class="card-summary-value" id="summaryEmpresas">—</h2>
                            </div>
                            <div class="card-summary-icon bg-primary-soft text-primary">
                                <i class="bi bi-buildings"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-summary border-0 h-100">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p class="card-summary-label">Equipos registrados</p>
                                <h2 class="card-summary-value" id="summaryEquipos">—</h2>
                            </div>
                            <div class="card-summary-icon bg-success-soft text-success">
                                <i class="bi bi-cpu"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-summary border-0 h-100">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <p class="card-summary-label">Contratos activos</p>
                                <h2 class="card-summary-value" id="summaryContratos">—</h2>
                            </div>
                            <div class="card-summary-icon bg-warning-soft text-warning">
                                <i class="bi bi-file-earmark-text"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Gráfico + Filtros -->
            <section class="row g-4 mb-4">
                <div class="col-lg-5">
                    <div class="card card-custom h-100">
                        <div class="card-header border-0 d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <span class="icon-pill bg-primary-soft text-primary">
                                    <i class="bi bi-diagram-3"></i>
                                </span>
                                <div>
                                    <h6 class="card-title mb-0">Equipos por categoría</h6>
                                    <small class="text-muted">Distribución actual del inventario</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="chartCategoria" height="200"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-lg-7">
                    <div class="card card-custom h-100">
                        <div class="card-header border-0 d-flex align-items-center gap-2">
                            <span class="icon-pill bg-primary-soft text-primary">
                                <i class="bi bi-funnel"></i>
                            </span>
                            <div>
                                <h6 class="card-title mb-0">Filtros</h6>
                                <small class="text-muted">Refina la vista del inventario</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row gy-3 align-items-end">
                                <div class="col-md-4">
                                    <label for="filterEmpresa" class="form-label mb-1">Empresa</label>
                                    <select id="filterEmpresa" class="form-select">
                                        <option value="">Todas las empresas</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label for="filterEstado" class="form-label mb-1">Estado</label>
                                    <select id="filterEstado" class="form-select">
                                        <option value="">Todos los estados</option>
                                        <option value="Operativo">Operativo</option>
                                        <option value="En Almacén">En Almacén</option>
                                        <option value="Asignado">Asignado</option>
                                        <option value="En Mantenimiento">En Mantenimiento</option>
                                        <option value="De Baja">De Baja</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label for="searchInput" class="form-label mb-1">Buscar</label>
                                    <input type="text" id="searchInput" class="form-control" placeholder="Serie, marca, modelo…">
                                </div>
                                <div class="col-md-2 d-grid">
                                    <button class="btn btn-primary btn-filter" id="btnFiltrar">
                                        <i class="bi bi-search me-1"></i> Filtrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Tabla -->
            <section class="card card-custom">
                <div class="card-header border-0 d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <span class="icon-pill bg-primary-soft text-primary">
                            <i class="bi bi-table"></i>
                        </span>
                        <div>
                            <h6 class="card-title mb-0">Inventario de equipos</h6>
                            <small class="text-muted">Detalle de equipos por empresa y contrato</small>
                        </div>
                    </div>
                    <div class="text-muted small" id="countEquipos">0 equipos</div>
                </div>

                <div class="table-responsive">
                    <table class="table align-middle mb-0" id="tablaEquipos">
                        <thead>
                            <tr>
                                <th style="width: 80px;">ID</th>
                                <th style="width: 180px;">N/S</th>
                                <th>Marca / Modelo</th>
                                <th>Empresa / Contrato</th>
                                <th>Categoría</th>
                                <th>Estado</th>
                                <th class="text-center" style="width: 80px;">Acción</th>
                            </tr>
                        </thead>
                        <tbody id="equiposBody">
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="loader-container">
                                        <div class="spinner-border spinner-border-custom" role="status"></div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white border-0">
                    <nav aria-label="Paginación" class="d-flex justify-content-between align-items-center">
                        <small class="text-muted" id="paginationInfo"></small>
                        <ul class="pagination mb-0" id="paginacion"></ul>
                    </nav>
                </div>
            </section>
        </main>
    </div>

    <!-- Modal Detalle -->
    <div class="modal fade" id="modalDetalle" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header border-0 bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-info-circle me-2"></i>Detalles del equipo
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="detalleContent">
                    <div class="loader-container">
                        <div class="spinner-border spinner-border-custom" role="status"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/inventario.js"></script>
</body>
</html>
