<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= isAdmin ? 'Panel Admin' : 'Panel Cliente' %></title>

  <link rel="stylesheet" href="/css/menu_cliente.css" />
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="shortcut icon" href="/img/favicon-16x16.ico" type="image/x-icon">
  
  <meta name="csrf-token" content="<%= csrfToken %>">

  <script>
    window.__IS_ADMIN__    = "<%= isAdmin %>";
    window.__TENANT_SLUG__ = "<%= activeTenant.slug %>"; 
    window.__USER_NAME__   = "<%= user.nombre %>";
  </script>
</head>
<body>
  
  <div class="d-flex">
    <nav class="sidebar">
      <div class="logo-details">
        <img
          src="<%= activeTenant.logo ? '/img/logo_cliente/' + activeTenant.logo : '/img/logo386blanco.png' %>"
          alt="Logo"
        />
        <i class='bx bx-menu' id="btn-toggle"></i>
      </div>

      <ul class="nav-list">
        <% menuItems.forEach(item => { %>
          <li>
            <a href="#"
               class="sidebar-link<%= item.active ? ' active' : '' %>"
               data-path="<%= item.path %>">
              <i class="<%= item.icon.includes('bx') ? '' : 'bi' %> <%= item.icon %>"></i>
              <span class="links_name"><%= item.label %></span>
            </a>
            <span class="tooltip"><%= item.label %></span>
          </li>
        <% }) %>

        <% if (!isAdmin && userCompanies && userCompanies.length > 1) { %>
          <li class="company-switcher-menu" id="company-switcher-menu">
            <a href="#" class="switcher-toggle">
              <i class='bx bxs-buildings'></i>
              <span class="links_name"><%= activeTenant.empresaName %></span>
            </a>
            <span class="tooltip">Cambiar Empresa</span>
            <ul class="sub-menu">
              <% userCompanies.forEach(company => { %>
                <li>
                  <a href="#" 
                     class="company-option <%= company.id_empresa == activeTenant.id_empresa ? 'active-company' : '' %>"
                     data-empresa-id="<%= company.id_empresa %>">
                    <%= company.nombre %>
                  </a>
                </li>
              <% }) %>
            </ul>
          </li>
        <% } %>
      </ul>

      <div class="profile-container">
        <div class="profile">
          <div class="profile-content">
              <div class="avatar">
                  <%= user.nombre.charAt(0).toUpperCase() %>
              </div>
              <div class="profile-details">
                <div class="name"><%= user.nombre.split(' ')[0] %></div>
                <div class="company"><%= activeTenant.empresaName %></div>
              </div>
          </div>
          <i class='bx bx-log-out' id="log_out" title="Cerrar SesiÃ³n"></i>
        </div>
      </div>
    </nav>

    <section class="home-section">
      <div id="welcome-container" class="welcome-screen"></div>
      <div id="iframe-loader" class="loader-container d-none">
          <div class="spinner"></div>
      </div>
      <div id="content-frame" style="display:none; width: 100%; height: 100%;">
        <iframe frameborder="0" style="width: 100%; height: 100%;"></iframe>
      </div>
    </section>
  </div>

  <script src="/js/menu.js"></script>
</body>
</html>